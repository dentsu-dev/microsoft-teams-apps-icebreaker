{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "%mainMessageText%",
          "wrap": true,
          "maxLines": 2
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "%yesButtonText%",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "%yesButtonText%",
          "text": "%yesTextName%"
        }
      }
    },
    {
      "type": "Action.Submit",
      "title": "%notButtonText%",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "%notButtonText%",
          "text": "%noTextName%"
        }
      }
    }
  ],
  "version": "1.0"
}